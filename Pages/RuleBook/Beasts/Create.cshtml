@page
@model ChernabogJailApp.Pages.RuleBook.Beasts.CreateModel

@{
    ViewData["Title"] = "Добавить новое существо";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Beast.BeastCategoryId" class="control-label"></label>
                <select asp-for="Beast.BeastCategoryId" class ="form-control" asp-items="ViewBag.BeastCategoryId">
                    <option value="">Нет категории</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Beast.Name" class="control-label"></label>
                <input asp-for="Beast.Name" class="form-control" />
                <span asp-validation-for="Beast.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beast.Description" class="control-label"></label>
                <textarea asp-for="Beast.Description" class="form-control"></textarea>
                <span asp-validation-for="Beast.Description" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-row justify-content-between pt-2 align-content-stretch">
                <a href='javascript:window.location = document.referrer'>
                    <i class="btn btn-dark fa fa-arrow-left" aria-hidden="true"></i>
                </a>
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
