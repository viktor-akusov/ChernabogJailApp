@page
@model ChernabogJailApp.Pages.RuleBook.Beasts.Categories.DetailsModel

@{
    ViewData["Title"] = $"Особая способность {Model.BeastCategory.Name}";
}

<div>
    <h1 class="d-flex flex-row gap-3">
        <span style="text-align: right;">@Html.DisplayFor(modelItem => Model.BeastCategory.Name)</span>
    </h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BeastCategory.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BeastCategory.Description)
        </dd>
    </dl>
</div>
<div class="d-flex flex-row justify-content-left gap-2">
    <a href='javascript:window.location = document.referrer'>
        <i class="btn btn-dark fa fa-arrow-left" aria-hidden="true"></i>
    </a>
    @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.BeastCategory?.Id">
            <i class="btn btn-dark fa fa-edit" aria-hidden="true"></i>
        </a>
    }
</div>
