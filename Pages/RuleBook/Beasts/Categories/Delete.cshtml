@page
@model ChernabogJailApp.Pages.RuleBook.Beasts.Categories.DeleteModel

@{
    ViewData["Title"] = $"Удалить категорию \"{Model.BeastCategory.Name}\"";
} 

<h3>Вы действительно хотите удалить категорию существ?</h3>
<div>
    <h4 class="d-flex flex-row gap-3">
        <span style="text-align: right;">@Html.DisplayFor(modelItem => Model.BeastCategory.Name)</span>
    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BeastCategory.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BeastCategory.Description)
        </dd>
    </dl>

    <form method="post" class="d-flex flex-row justify-content-between">
        <input type="hidden" asp-for="BeastCategory.Id" />
        <a href='javascript:window.location = document.referrer'>
            <i class="btn btn-dark fa fa-arrow-left" aria-hidden="true"></i>
        </a>
        <input type="submit" value="Удалить" class="btn btn-danger rounded-end" />
    </form>
</div>