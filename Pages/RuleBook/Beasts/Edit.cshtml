@page
@model ChernabogJailApp.Pages.RuleBook.Beasts.EditModel

@{
    ViewData["Title"] = $"Редактировать категорию \"{Model.Beast.Name}\"";
}

<h1>Редактировать существо</h1>

<h4 class="d-flex flex-row gap-3">
    <span style="text-align: right;">@Html.DisplayFor(modelItem => Model.Beast.Name)</span>
</h4>
<hr />
<div class="d-flex flex-row">
    <div class="w-100">
        <form method="post" class="d-flex flex-column gap-5">
            <div class="d-flex flex-row gap-5">
                <div class="flex-grow-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Beast.Id" />
                    <div class="form-group">
                        <label asp-for="Beast.BeastCategoryId" class="control-label"></label>
                        <select asp-for="Beast.BeastCategoryId" class="form-control" asp-items="ViewBag.BeastCategoryId">
                            <option value="">Нет категории</option>
                        </select>
                        <span asp-validation-for="Beast.BeastCategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Beast.Name" class="control-label"></label>
                        <input asp-for="Beast.Name" class="form-control" />
                        <span asp-validation-for="Beast.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group flex-grow-1">
                    <label asp-for="Beast.Description" class="control-label"></label>
                    <textarea asp-for="Beast.Description" class="form-control"></textarea>
                    <span asp-validation-for="Beast.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex flex-row justify-content-between pt-2 align-content-stretch">
                <a asp-page="/RuleBook/Beasts/Index">
                    <i class="btn btn-dark fa fa-arrow-left" aria-hidden="true"></i>
                </a>
                <a href='/RuleBook/Beasts/Variations?id=@Model.Beast.Id' class="btn btn-dark">
                    <i class="fa fa-edit" aria-hidden="true"></i> Редактировать вариации
                </a>
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
